doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side Javascrript 
        ul
            each topic in topics
                li
                    a(href='/topic/'+topic.rindex)= topic.cname
        article
            if topic  
                h2= topic.category
                p=topic.postingname
            else
                h2 Welcome
                p My sql 
        ul
            li
                a(href="/topic/add") Add
            if topic
                li
                    a(href="/topic/"+topic.rindex+'/edit') Edit
                li
                    a(href="/topic/"+topic.rindex+'/delete') Delete
                    
