doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side Javascrript 
        ul
            each topic in topics
                li
                    a(href='/topic/'+topic.rindex)= topic.cname
        article
           form(action='/topic/'+topic.rindex+'/edit' method='post')
            p
                input(type="text" name='cname' value=topic.cname placeholder='title')
            p
                textarea(name="postingname")
                    =topic.postingname
            p
                input(type="text" name="category" value=topic.category placeholder="category")
            p
                input(type="submit")
        ul
            li
                a(href="/topic/add") Add
            if topic
